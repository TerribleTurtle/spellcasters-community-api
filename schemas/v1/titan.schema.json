{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Titan",
  "description": "Unique Class-Ultimate entity.",
  "type": "object",
  "required": [
    "entity_id",
    "name",
    "category",
    "magic_school",
    "changelog",
    "last_modified"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "entity_id": { "type": "string" },
    "name": { "type": "string" },
    "image_required": { "type": "boolean", "default": true },
    "category": {
      "type": "string",
      "enum": ["Titan"]
    },
    "magic_school": {
      "type": "string",
      "enum": ["Elemental", "Wild", "War", "Astral", "Holy", "Technomancy", "Necromancy", "Titan", "Dark", "Frost", "Lightning"]
    },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "rank": {
      "type": "string",
      "enum": ["V"]
    },
    "health": { "type": "integer", "minimum": 0 },
    "damage": { "type": "integer", "minimum": 0 },
    "dps": { "type": "number", "minimum": 0 },
    "attack_interval": { "type": "number", "minimum": 0 },
    "movement_speed": { "type": "integer", "minimum": 0 },
    "range": { "type": "integer", "minimum": 0 },
    "passive_health_regen": { "type": "integer", "minimum": 0 },
    "heal_amount": { "type": "integer", "minimum": 0 },
    "mechanics": {
      "type": "object",
      "properties": {
        "aura": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "radius": { "type": "number" },
              "value": { "type": "number", "description": "Amount per tick (Heal/Damage)" },
              "interval": { "type": "number" },
              "effect": { "type": "string", "enum": ["Heal", "Damage", "Buff", "Debuff"] },
              "target_type": { "type": "string", "enum": ["Ally", "Enemy", "All", "Building", "Creature"] }
            },
            "required": ["effect", "target_type"]
          }
        },
            "damage_modifiers": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["target_type", "multiplier"],
              "properties": {
                "target_type": {
                  "type": "string",
                  "enum": ["Building", "Creature", "Spellcaster", "Unit", "All", "Lifestone", "Flying", "Ground"]
                },
                "multiplier": {
                  "type": "number",
                  "description": "Damage Multiplier (e.g. 1.5 = 150%)"
                },
                "condition": { "type": "string" }
              }
            }
          },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
