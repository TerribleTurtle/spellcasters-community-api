{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spell",
  "type": "object",
  "required": ["id", "version", "name", "school", "cost", "description", "date_modified"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "id": { "type": "string" },
    "image_required": { "type": "boolean", "default": false },
    "name": { "type": "string" },
    "school": { "type": "string" },
    "description": { "type": "string" },
    "date_modified": { 
      "type": "string",
      "format": "date-time"
    },
    "cost": {
      "type": "object",
      "properties": {
        "mana": { "type": "integer" },
        "charges": { "type": "integer" }
      }
    },
    "cast_time": { "type": "number", "minimum": 0 },
    "cooldown": { "type": "number", "minimum": 0 },
    "effects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "upgrades": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "level": { "type": "integer" },
          "description": { "type": "string" },
          "effect": { "type": "object", "additionalProperties": true }
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
