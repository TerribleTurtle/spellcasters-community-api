{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incantation",
  "description": "Base entity definition for Creatures, Buildings, and Spells.",
  "type": "object",
  "required": [
    "entity_id",
    "name",
    "category",
    "magic_school",
    "rank",
    "changelog",
    "last_modified"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "entity_id": { "type": "string" },
    "name": { "type": "string" },
    "image_required": { "type": "boolean", "default": true },
    "category": {
      "type": "string",
      "enum": ["Creature", "Building", "Spell"]
    },
    "magic_school": {
      "type": "string",
      "enum": ["Elemental", "Wild", "War", "Astral", "Holy", "Technomancy", "Necromancy", "Titan", "Dark", "Frost", "Lightning"]
    },
    "rank": {
      "type": "string",
      "enum": ["I", "II", "III", "IV", "V"]
    },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "health": { "type": "integer", "minimum": 0 },
    "damage": { "type": "integer", "minimum": 0 },
    "movement_speed": { "type": "integer", "minimum": 0 },
    "range": { "type": "integer", "minimum": 0 },
    "heal_amount": { "type": "integer", "minimum": 0 },
    "duration": { "type": "number", "minimum": 0 }
  },
  "additionalProperties": false
}
