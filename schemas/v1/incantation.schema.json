{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incantation",
  "description": "Base entity definition for Creatures, Buildings, and Spells.",
  "type": "object",
  "required": [
    "entity_id",
    "name",
    "category",
    "magic_school",
    "rank",
    "changelog",
    "last_modified"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "entity_id": { "type": "string" },
    "name": { "type": "string" },
    "image_required": { "type": "boolean", "default": true },
    "category": {
      "type": "string",
      "enum": ["Creature", "Building", "Spell"]
    },
    "magic_school": {
      "type": "string",
      "enum": [
        "Elemental",
        "Wild",
        "War",
        "Astral",
        "Holy",
        "Technomancy",
        "Necromancy",
        "Titan",
        "Dark",
        "Frost",
        "Lightning"
      ]
    },
    "rank": {
      "type": "string",
      "enum": ["I", "II", "III", "IV", "V"]
    },
    "movement_type": {
      "type": "string",
      "enum": ["Ground", "Flying", "Hover"],
      "default": "Ground"
    },
    "mechanics": {
      "type": "object",
      "properties": {
        "waves": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of pulses for Wave based spells"
        },
        "interval": {
          "type": "number",
          "minimum": 0,
          "description": "Delay between pulses in seconds"
        },
        "bonus_damage": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["value", "unit", "target_type"],
            "properties": {
              "value": {
                "type": "number",
                "description": "Multiplier or Flat amount"
              },
              "unit": {
                "type": "string",
                "enum": ["flat", "percent_max_hp", "percent_current_hp"]
              },
              "target_type": {
                "type": "string",
                "enum": ["Building", "Creature", "All"]
              }
            }
          }
        }
      }
    },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "health": { "type": "integer", "minimum": 0 },
    "damage": { "type": "integer", "minimum": 0 },
    "movement_speed": { "type": "integer", "minimum": 0 },
    "range": { "type": "integer", "minimum": 0 },
    "heal_amount": { "type": "integer", "minimum": 0 },
    "duration": { "type": "number", "minimum": 0 }
  },
  "additionalProperties": false
}
