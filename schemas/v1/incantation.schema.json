{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incantation",
  "description": "Base entity definition for Creatures, Buildings, and Spells.",
  "type": "object",
  "required": [
    "entity_id",
    "name",
    "category",
    "magic_school",
    "rank",
    "changelog",
    "last_modified"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "entity_id": { "type": "string" },
    "name": { "type": "string" },
    "image_required": { "type": "boolean", "default": true },
    "category": {
      "type": "string",
      "enum": ["Creature", "Building", "Spell"]
    },
    "magic_school": {
      "type": "string",
      "enum": [
        "Elemental",
        "Wild",
        "War",
        "Astral",
        "Holy",
        "Technomancy",
        "Necromancy",
        "Titan",
        "Dark",
        "Frost",
        "Lightning"
      ]
    },
    "rank": {
      "type": "string",
      "enum": ["I", "II", "III", "IV", "V"]
    },
    "movement_type": {
      "type": "string",
      "enum": ["Ground", "Flying", "Hover"],
      "default": "Ground"
    },
    "mechanics": {
      "type": "object",
      "properties": {
        "waves": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of pulses for Wave based spells"
        },
        "interval": {
          "type": "number",
          "minimum": 0,
          "description": "Delay between pulses in seconds"
        },
        "capture_speed_modifier": {
          "type": "number",
          "description": "Multiplier for capture rate (e.g. 1.25 for +25%)"
        },
        "aura": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "radius": { "type": "number" },
              "value": {
                "type": "number",
                "description": "Amount per tick (Heal/Damage)"
              },
              "interval": { "type": "number" },
              "effect": {
                "type": "string",
                "enum": ["Heal", "Damage", "Buff", "Debuff"]
              },
              "target_type": {
                "type": "string",
                "enum": ["Ally", "Enemy", "All", "Building", "Creature"]
              }
            },
            "required": ["effect", "target_type"]
          }
        },
        "spawner": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "unit_id": { "type": "string" },
              "count": { "type": "integer" },
              "interval": { "type": "number" },
              "trigger": {
                "type": "string",
                "enum": ["Interval", "Death", "Spawn"]
              }
            },
            "required": ["unit_id", "count", "trigger"]
          }
        },
        "damage_modifiers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["target_type", "multiplier"],
            "properties": {
              "target_type": {
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "Building",
                      "Creature",
                      "Spellcaster",
                      "Unit",
                      "All",
                      "Lifestone",
                      "Flying",
                      "Ground",
                      "Hover"
                    ]
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": [
                        "Building",
                        "Creature",
                        "Spellcaster",
                        "Unit",
                        "All",
                        "Lifestone",
                        "Flying",
                        "Ground",
                        "Hover"
                      ]
                    }
                  }
                ]
              },
              "multiplier": {
                "type": "number",
                "description": "Damage Multiplier (e.g. 1.5 = 150%)"
              },
              "condition": { "type": "string" }
            }
          }
        },
        "damage_reduction": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["source_type", "multiplier"],
            "properties": {
              "source_type": { "type": "string" },
              "multiplier": {
                "type": "number",
                "description": "Incoming Damage Multiplier (e.g. 0.5 = 50% damage taken)"
              },
              "condition": { "type": "string" }
            }
          }
        },
        "bonus_damage": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["value", "unit", "target_type"],
            "properties": {
              "value": {
                "type": "number",
                "description": "Multiplier or Flat amount"
              },
              "unit": {
                "type": "string",
                "enum": ["flat", "percent_max_hp", "percent_current_hp"]
              },
              "target_type": {
                "type": "string",
                "enum": ["Building", "Creature", "All"]
              }
            }
          }
        },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "initial_attack": {
          "type": "object",
          "properties": {
            "damage_flat": { "type": "integer" },
            "target_types": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["Ground", "Hover", "Flying", "Building", "Creature", "Spellcaster", "Unit", "All"]
              }
            },
            "description": { "type": "string" }
          },
          "required": ["damage_flat", "target_types"]
        }
      }
    },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "health": { "type": "integer", "minimum": 0 },
    "damage": { "type": "integer", "minimum": 0 },
    "movement_speed": { "type": "integer", "minimum": 0 },
    "range": { "type": "integer", "minimum": 0 },
    "heal_amount": { "type": "integer", "minimum": 0 },
    "duration": { "type": "number", "minimum": 0 }
  },
  "additionalProperties": false
}
