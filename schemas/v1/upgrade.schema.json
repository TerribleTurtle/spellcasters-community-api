{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Upgrade",
  "description": "RNG Level-up bonus options.",
  "type": "object",
  "required": [
    "upgrade_id",
    "description",
    "target_tags",
    "effect",
    "changelog",
    "last_modified"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time", "description": "UTC Timestamp of the last update" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "upgrade_id": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "description": "User-facing text describing the upgrade."
    },
    "target_tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags of units this upgrade applies to. Empty list means Global/Player upgrade."
    },
    "effect": {
      "type": "object",
      "description": "Key-value pairs of stats to modify (e.g., {'health': 10}). Schema is open-ended to allow flexibility.",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
