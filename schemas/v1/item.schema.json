{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item",
  "type": "object",
  "required": ["id", "version", "name", "type", "description", "date_modified"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "id": { "type": "string" },
    "image_required": { "type": "boolean", "default": false },
    "name": { "type": "string" },
    "type": { 
      "type": "string",
      "enum": ["consumable", "instant_xp", "equipment", "misc"] 
    },
    "description": { "type": "string" },
    "date_modified": { 
      "type": "string",
      "format": "date-time"
    },
    "max_stack": { 
      "type": "integer", 
      "description": "Maximum number of this item allowed in inventory (usually 1)." 
    },
    "value": {
      "type": "integer",
      "description": "Numeric value for XP or sale price."
    },
    "effect": {
      "type": "object",
      "properties": {
        "action": { "type": "string" },
        "amount": { "type": "number" },
        "target": { "type": "string" }
      },
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
