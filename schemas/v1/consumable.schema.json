{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Consumable",
  "description": "Items found in chests.",
  "type": "object",
  "required": [
    "entity_id",
    "name",
    "category",
    "changelog",
    "last_modified"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time" },
    "effect_type": { "type": "string" },
    "value": { "type": "integer" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "entity_id": { "type": "string" },
    "name": { "type": "string" },
    "image_required": { "type": "boolean", "default": true },
    "category": {
      "type": "string",
      "enum": ["Consumable"]
    },
    "description": { "type": "string" },
    "duration": { "type": "number", "minimum": 0 },
    "stack_size": { "type": "integer", "minimum": 1 }
  },
  "additionalProperties": false
}
