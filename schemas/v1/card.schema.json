{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Card",
  "description": "Definition of a playable Card in the Deck, linking to a specific Unit entity.",
  "type": "object",
  "required": [
    "game_version",
    "card_id",
    "entity_id",
    "name",
    "rank",
    "cost_population",
    "cost_charges",
    "cast_time"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "game_version": {
      "type": "string",
      "description": "SemVer string."
    },
    "card_id": {
      "type": "string",
      "description": "Unique identifier for this card (e.g., 'card_skeleton_I')."
    },
    "entity_id": {
      "type": "string",
      "description": "Reference to the unit.schema.json entity_id spawned by this card."
    },
    "name": {
      "type": "string",
      "description": "Display name of the Card."
    },
    "image_required": {
      "type": "boolean",
      "default": true,
      "description": "If true, validates that an image exists in assets/cards/."
    },
    "rank": {
      "type": "string",
      "enum": [
        "I",
        "II",
        "III",
        "IV"
      ],
      "description": "Progression tier of the card."
    },
    "cost_population": {
      "type": "integer",
      "minimum": 0,
      "description": "Population occupancy cost."
    },
    "cost_charges": {
      "type": "integer",
      "minimum": 0,
      "description": "Ammo cost to cast."
    },
    "cast_time": {
      "type": "number",
      "minimum": 0,
      "description": "Time in seconds to cast the card. Acts as rate-limiter."
    }
  },
  "additionalProperties": false
}
