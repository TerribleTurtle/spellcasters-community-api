{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Deck",
  "description": "A pre-built deck configuration, e.g., 'Starter Deck' or 'Meta Build'.",
  "type": "object",
  "required": ["id", "version", "name", "hero_id", "titan_id", "cards", "description", "date_modified"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "date_modified": { "type": "string", "format": "date-time" },
    "hero_id": { 
      "type": "string",
      "description": "The Hero this deck is built for."
    },
    "titan_id": { 
      "type": "string",
      "description": "The Titan selected for the 5th slot."
    },
    "cards": {
      "type": "array",
      "description": "The 4 flexible slots (Creatures, Buildings, or Spells). Must be unique.",
      "minItems": 4,
      "maxItems": 4,
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
