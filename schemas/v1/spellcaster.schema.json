{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spellcaster",
  "description": "Player Character definition including stats and fixed ability kit.",
  "type": "object",
  "required": [
    "spellcaster_id",
    "name",
    "class",
    "difficulty",
    "abilities",
    "changelog",
    "last_modified",
    "category"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time", "description": "UTC Timestamp of the last update" },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "version", "description"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "version": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "spellcaster_id": { "type": "string" },
    "name": { "type": "string" },
    "class": { 
      "type": "string", 
      "enum": ["Conqueror", "Duelist", "Enchanter"],
      "description": "Intrinsic Spellcaster class that determines upgrade priorities"
    },
    "category": {
      "type": "string",
      "enum": ["Spellcaster"]
    },
    "movement_type": {
      "type": "string",
      "enum": ["Ground", "Flying", "Hover"],
      "default": "Ground"
    },
    "image_required": { "type": "boolean", "default": true },
    "difficulty": { 
      "type": "integer", 
      "minimum": 1, 
      "maximum": 3,
      "description": "Complexity rating from 1 (Easy) to 3 (Hard)" 
    },
    "abilities": {
      "type": "object",
      "properties": {
        "passive": {
          "type": "array",
          "items": { "$ref": "#/definitions/ability_detail" }
        },
        "primary": { "$ref": "#/definitions/ability_detail" },
        "defense": { "$ref": "#/definitions/ability_detail" },
        "ultimate": { "$ref": "#/definitions/ability_detail" }
      },
      "required": ["passive", "primary", "defense", "ultimate"]
    }
  },
  "definitions": {
    "ability_detail": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "stats": {
          "type": "object",
          "properties": {
            "damage": { "type": ["integer", "null"], "description": "Base damage amount" },
            "duration": { "type": ["number", "null"], "description": "Duration in seconds" },
            "stacks": { "type": ["integer", "null"], "description": "Max stacks/charges for effect" },
            "charges": { "type": ["integer", "null"], "description": "Number of uses/stacks" },
            "cooldown": { "type": ["number", "null"], "description": "Cooldown in seconds" },
            "range": { "type": ["integer", "null"], "description": "Range in units" },
            "value": { "type": ["number", "null"], "description": "Primary Value (Heal/Damage Amount)" },
            "radius": { "type": ["number", "null"], "description": "Radius of effect" },
            "interval": { "type": ["number", "null"], "description": "Tick interval in seconds" }
          }
        },
        "mechanics": {
          "type": "object",
          "properties": {
            "waves": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of pulses for Wave based spells"
            },
            "interval": {
              "type": "number",
              "minimum": 0,
              "description": "Delay between pulses in seconds"
            },
            "capture_speed_modifier": {
              "type": "number",
              "description": "Multiplier for capture rate (e.g. 1.25 for +25%)"
            },
            "aura": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "radius": { "type": "number" },
                  "value": {
                    "type": "number",
                    "description": "Amount per tick (Heal/Damage)"
                  },
                  "interval": { "type": "number" },
                  "effect": {
                    "type": "string",
                    "enum": ["Heal", "Damage", "Buff", "Debuff"]
                  },
                  "target_type": {
                    "type": "string",
                    "enum": ["Ally", "Enemy", "All", "Building", "Creature"]
                  }
                },
                "required": ["effect", "target_type"]
              }
            },
            "spawner": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "unit_id": { "type": "string" },
                  "count": { "type": "integer" },
                  "interval": { "type": "number" },
                  "trigger": {
                    "type": "string",
                    "enum": ["Interval", "Death", "Spawn"]
                  }
                },
                "required": ["unit_id", "count", "trigger"]
              }
            },
            "damage_modifiers": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["target_type", "multiplier"],
                "properties": {
                  "target_type": {
                    "type": "string",
                    "enum": [
                      "Building",
                      "Creature",
                      "Spellcaster",
                      "Unit",
                      "All",
                      "Lifestone",
                      "Flying",
                      "Ground"
                    ]
                  },
                  "multiplier": {
                    "type": "number",
                    "description": "Damage Multiplier (e.g. 1.5 = 150%)"
                  },
                  "condition": { "type": "string" }
                }
              }
            },
            "damage_reduction": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["source_type", "multiplier"],
                "properties": {
                  "source_type": { "type": "string" },
                  "multiplier": {
                    "type": "number",
                    "description": "Incoming Damage Multiplier (e.g. 0.5 = 50% damage taken)"
                  },
                  "condition": { "type": "string" }
                }
              }
            },
            "bonus_damage": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["value", "unit", "target_type"],
                "properties": {
                  "value": {
                    "type": "number",
                    "description": "Multiplier or Flat amount"
                  },
                  "unit": {
                    "type": "string",
                    "enum": ["flat", "percent_max_hp", "percent_current_hp"]
                  },
                  "target_type": {
                    "type": "string",
                    "enum": ["Building", "Creature", "All"]
                  }
                }
              }
            },
            "features": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "required": ["name", "description"]
    }
  },
  "additionalProperties": false
}
