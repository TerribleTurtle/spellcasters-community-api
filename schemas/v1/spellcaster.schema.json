{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spellcaster",
  "description": "Player Character definition including stats and fixed ability kit.",
  "type": "object",
  "required": [
    "spellcaster_id",
    "name",
    "class",
    "difficulty",
    "abilities",
    "changelog",
    "last_modified",
    "category",
    "tags"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "last_modified": { "type": "string", "format": "date-time", "description": "UTC Timestamp of the last update" },
    "changelog": { "$ref": "common.schema.json#/definitions/changelog" },
    "spellcaster_id": { "type": "string" },
    "name": { "type": "string" },
    "class": { 
      "type": "string", 
      "enum": ["Conqueror", "Duelist", "Enchanter"],
      "description": "Intrinsic Spellcaster class that determines upgrade priorities"
    },
    "category": {
      "type": "string",
      "enum": ["Spellcaster"]
    },
    "movement_type": { "$ref": "common.schema.json#/definitions/movement_type" },
    "image_required": { "$ref": "common.schema.json#/definitions/image_required" },
    "difficulty": { 
      "type": "integer", 
      "minimum": 1, 
      "maximum": 3,
      "description": "Complexity rating from 1 (Easy) to 3 (Hard)" 
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "abilities": {
      "type": "object",
      "properties": {
        "passive": {
          "type": "array",
          "items": { "$ref": "#/definitions/ability_detail" }
        },
        "primary": { "$ref": "#/definitions/ability_detail" },
        "defense": { "$ref": "#/definitions/ability_detail" },
        "ultimate": { "$ref": "#/definitions/ability_detail" }
      },
      "required": ["passive", "primary", "defense", "ultimate"]
    }
  },
  "definitions": {
    "ability_detail": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "stats": {
          "type": "object",
          "properties": {
            "damage": { "type": "integer", "description": "Base damage amount" },
            "duration": { "type": "number", "description": "Duration in seconds" },
            "stacks": { "type": "integer", "description": "Max stacks/charges for effect" },
            "charges": { "type": "integer", "description": "Number of uses/stacks" },
            "cooldown": { "type": "number", "description": "Cooldown in seconds" },
            "range": { "type": "integer", "description": "Range in units" },
            "value": { "type": "number", "description": "Primary Value (Heal/Damage Amount)" },
            "radius": { "type": "number", "description": "Radius of effect" },
            "interval": { "type": "number", "description": "Tick interval in seconds" },
            "projectiles": { "type": "integer", "description": "Number of projectiles per attack (e.g. 2 for 21x2)" }
          }
        },
        "mechanics": {
          "type": "object",
          "properties": {
            "waves": {
              "type": "integer",
              "minimum": 1,
              "description": "Number of pulses for Wave based spells"
            },
            "interval": {
              "type": "number",
              "minimum": 0,
              "description": "Delay between pulses in seconds"
            },
            "capture_speed_modifier": {
              "type": "number",
              "description": "Multiplier for capture rate (e.g. 1.25 for +25%)"
            },
            "aura": { "$ref": "common.schema.json#/definitions/aura" },
            "spawner": { "$ref": "common.schema.json#/definitions/spawner" },
            "damage_modifiers": { "$ref": "common.schema.json#/definitions/damage_modifiers" },
            "damage_reduction": { "$ref": "common.schema.json#/definitions/damage_reduction" },
            "bonus_damage": { "$ref": "common.schema.json#/definitions/bonus_damage" },
            "features": { "$ref": "common.schema.json#/definitions/features" }
          }
        }
      },
      "required": ["name", "description"]
    }
  },
  "additionalProperties": false
}
