{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Creature",
  "type": "object",
  "required": ["id", "version", "name", "type", "rank", "description", "stats", "date_modified"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "id": { "type": "string" },
    "image_required": { "type": "boolean", "default": false },
    "name": { "type": "string" },
    "type": { "type": "string" },
    "rank": { "type": "integer", "minimum": 1 },
    "description": { "type": "string" },
    "date_modified": { 
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last modification."
    },
    "stats": {
      "type": "object",
      "required": ["health", "speed", "dps", "hps"],
      "properties": {
        "health": {
          "type": "integer",
          "minimum": 1
        },
        "dps": { "type": "integer" },
        "speed": { "type": "integer" },
        "hps": { "type": "integer" },
        "range": {
          "anyOf": [{ "type": "integer" }, { "type": "string" }]
        },
        "cost": { "type": "integer" }
      }
    },
    "drops": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "item_id": { "type": "string" },
          "chance": { "type": "number", "minimum": 0, "maximum": 1 },
          "min": { "type": "integer", "minimum": 0 },
          "max": { "type": "integer", "minimum": 1 }
        },
        "required": ["item_id", "chance"]
      }
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
