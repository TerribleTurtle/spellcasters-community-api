{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hero",
  "description": "Player Character definition including stats and fixed ability kit.",
  "type": "object",
  "required": [
    "game_version",
    "hero_id",
    "name",
    "health",
    "movement_speed",
    "flight_speed",
    "health_regen_rate",
    "regen_delay",
    "attack_damage_summoner",
    "attack_damage_minion",
    "abilities"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "game_version": { "type": "string" },
    "hero_id": { "type": "string" },
    "name": { "type": "string" },
    "image_required": { "type": "boolean", "default": true },
    "health": { "type": "integer", "minimum": 1 },
    "movement_speed": { "type": "integer", "minimum": 0 },
    "flight_speed": { "type": "integer", "minimum": 0 },
    "health_regen_rate": { "type": "number", "minimum": 0 },
    "regen_delay": { "type": "number", "minimum": 0 },
    "attack_damage_summoner": { "type": "integer", "minimum": 0 },
    "attack_damage_minion": { "type": "integer", "minimum": 0 },
    "abilities": {
      "type": "object",
      "properties": {
        "passive": {
          "type": "array",
          "items": { "$ref": "#/definitions/ability_detail" }
        },
        "primary": { "$ref": "#/definitions/ability_detail" },
        "defense": { "$ref": "#/definitions/ability_detail" },
        "ultimate": { "$ref": "#/definitions/ability_detail" }
      },
      "required": ["passive", "primary", "defense", "ultimate"]
    }
  },
  "definitions": {
    "ability_detail": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name", "description"]
    }
  },
  "additionalProperties": false
}
