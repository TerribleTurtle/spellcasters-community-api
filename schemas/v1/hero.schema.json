{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hero",
  "description": "Player Character definition including stats and fixed ability kit.",
  "type": "object",
  "required": [
    "game_version",
    "hero_id",
    "name",
    "health",
    "movement_speed",
    "flight_speed",
    "health_regen_rate",
    "regen_delay",
    "attack_damage_summoner",
    "attack_damage_minion",
    "abilities"
  ],
  "properties": {
    "$schema": { "type": "string" },
    "game_version": {
      "type": "string"
    },
    "hero_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "image_required": {
      "type": "boolean",
      "default": true
    },
    "health": {
      "type": "integer",
      "minimum": 1
    },
    "movement_speed": {
      "type": "integer",
      "minimum": 0
    },
    "flight_speed": {
      "type": "integer",
      "minimum": 0
    },
    "health_regen_rate": {
      "type": "number",
      "minimum": 0,
      "description": "HP restored per second."
    },
    "regen_delay": {
      "type": "number",
      "minimum": 0,
      "description": "Seconds without damage before regen starts."
    },
    "attack_damage_summoner": {
      "type": "integer",
      "minimum": 0,
      "description": "Damage vs Enemy Heroes."
    },
    "attack_damage_minion": {
      "type": "integer",
      "minimum": 0,
      "description": "Damage vs Minions/Units."
    },
    "abilities": {
      "type": "object",
      "properties": {
        "passive": { "type": "string" },
        "primary": { "type": "string" },
        "defense": { "type": "string" },
        "ultimate": { "type": "string" }
      },
      "required": ["passive", "primary", "defense", "ultimate"],
      "description": "Names/Descriptions of the hero's fixed ability kit."
    }
  },
  "additionalProperties": false
}
