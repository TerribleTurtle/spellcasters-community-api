{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Building",
  "type": "object",
  "required": ["id", "version", "name", "size", "description", "date_modified"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "id": { "type": "string" },
    "image_required": { "type": "boolean", "default": false },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "date_modified": { 
      "type": "string",
      "format": "date-time"
    },
    "classification": { 
      "type": "string",
      "enum": ["military", "economy", "defense", "cosmetic"] 
    },
    "size": { 
      "type": "string",
      "pattern": "^\\d+x\\d+$",
      "description": "Grid size, e.g., '2x2' or '3x3'."
    },
    "build_time": { "type": "integer", "description": "Seconds to construct." },
    "cost": {
      "type": "object",
      "properties": {
        "population": { "type": "integer", "default": 0 },
        "charges": { "type": "integer", "default": 1 }
      },
      "additionalProperties": false
    },
    "stats": {
      "type": "object",
      "properties": {
        "health": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
